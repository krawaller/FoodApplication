#createDishDiv.row
	.col-md-offset-4.col-md-4
			form(role="form")
				.form-group
					label(for="title") Title
					input#title.form-control(type="text", name="title", placeholder="Recipe Title...", value= title)
				.form-group
					label(for="addIngredient") Ingredient
					input#addIngredient.form-control(type="text", name="ingredient", placeholder="Press Enter to add ingredient..")
				button.btn.btn-default(type="button") Finish
br
#listIngredientsDiv.row
	.col-md-offset-4.col-md-4
		if typeof ingredients != "undefined"
			if ingredients != ""
				ul
					each ingredient in ingredients
						li= ingredient